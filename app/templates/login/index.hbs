<form method="post" action="">
  <label for="username">Username {{input type="text" id="username" name="username" value=username}}</label>
  <label for="password">Password {{input type="password" id="password" name="password" value=password}}</label>

  <button {{action "login"}}>Login</button>
</form>

<ul>
  <li>{{#link-to "recover-username"}}Recover Username{{/link-to}}</li>
  <li>{{#link-to "recover-password"}}Recover Password{{/link-to}}</li>
</ul>
