<h3>Select Delivery Method</h3>

<form action="" method="post">

{{#radiogroup name="register" value=deliveryMethod}}
  {{#each itemController="one-time-password/delivery-method"}}
    <label {{bind-attr for=htmlid}}>{{radio id=htmlid value=value}} {{type}} - {{value}}</label>
  {{/each}}
{{/radiogroup}}

<button {{action "submit"}}>Submit</button>

</form>
